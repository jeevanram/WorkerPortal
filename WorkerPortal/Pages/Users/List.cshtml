@page
@model WorkerPortal.Pages.Users.ListModel
@{
}

<div style="float:left"><h1>Users</h1></div>
<div style="float:right"><h1><a asp-page=".\Edit" class="btn btn-primary">Add New</a></h1></div>

@if(Model.StatusMessage != null)
{
    <div style="float:left;width:100%" class="alert alert-info">@Model.StatusMessage</div> 
}

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button id="usrsearch" class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>
<div style="overflow-x:auto;">
    <table style="border-collapse: collapse;">
        <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Detail</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        @foreach (var user in Model.Users)
        {
    <tr>
        <td>@user.Username</td>
        <td>@user.FirstName @user.LastName</td>
        <td>@user.Email</td>
        <td>
            <a class="btn btn-lg" asp-page="./Detail" asp-route-userId="@user.UserId">
                <i class="glyphicon glyphicon-zoom-in"></i>
            </a>
        </td>
        <td>
            <a class="btn btn-lg" asp-page="./Edit" asp-route-userId="@user.UserId">
                <i class="glyphicon glyphicon-edit"></i>
            </a>
        </td>
        <td>
            <a class="btn btn-lg" asp-page="./Delete" asp-route-userId="@user.UserId">
                <i class="glyphicon glyphicon-trash"></i>
            </a>
        </td>
    </tr>
        }
    </table>
</div>